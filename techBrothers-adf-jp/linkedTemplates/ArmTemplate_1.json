									"outputs": [
										{
											"referenceName": "ds_sqltable_destination",
											"type": "DatasetReference",
											"parameters": {
												"dsp_SheetName": {
													"value": "@item().SheetName",
													"type": "Expression"
												}
											}
										}
									]
								}
							]
