											"typeConversion": true,
											"typeConversionSettings": {
												"allowDataTruncation": true,
												"treatBooleanAsNumber": false
											}
										}
									},
									"inputs": [
										{
											"referenceName": "ds_excel_source",
											"type": "DatasetReference",
											"parameters": {
												"ds_pSheetName": {
													"value": "@item().SheetName",
													"type": "Expression"
												}
											}
										}
